rag:
  security:
    enabled: true

    # BigQuery IAM
    bigquery:
      required_roles:
        - "roles/bigquery.dataEditor"
        - "roles/bigquery.jobUser"
      required_env_vars:
        - "GCP_PROJECT_ID"
        - "GOOGLE_APPLICATION_CREDENTIALS"

