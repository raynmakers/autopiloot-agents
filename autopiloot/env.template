# Autopiloot Agency Environment Configuration Template
# Copy this file to .env and fill in your actual values
# WARNING: Never commit the actual .env file - it contains secrets!

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# AssemblyAI Configuration (for transcription)
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# YouTube Data API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here

# Slack Configuration (for notifications)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here

# Google Services Configuration
# Path to your Google service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account.json

# Google Drive Folder IDs for storing transcripts and summaries
GOOGLE_DRIVE_FOLDER_ID_TRANSCRIPTS=your_drive_folder_id_for_transcripts
GOOGLE_DRIVE_FOLDER_ID_SUMMARIES=your_drive_folder_id_for_summaries

# Zep GraphRAG Configuration
ZEP_API_KEY=your_zep_api_key_here
ZEP_COLLECTION=autopiloot_guidelines

# Langfuse Configuration (for LLM observability)
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# General Configuration
TIMEZONE=Europe/Amsterdam

# Development/Testing Configuration (optional)
# LOG_LEVEL=INFO
# DEBUG=false
